@model IEnumerable<Online_game.Models.Domain.Registration>

@{
    ViewBag.Title = "Userlist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="card-title">List -User</h4>

<p>
    @using (Html.BeginForm("Userlist", "Profile", FormMethod.Get))
    {
        <b> Search by</b> @*@Html.RadioButton("searchby", "Name", true)<b> Name</b>*@        
        @Html.TextBox("search") <input type="submit" value=" Search" />
    }
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a href="@Url.Action("DeleteUser", new {id = item.id })"><i class="mdi mdi-delete"></i></a>
            </td>
        </tr>
    }

</table>
