@model Online_game.Models.ViewModel.PlayJodiViewModel

@{
    ViewBag.Title = "AddPlayJodi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Play Jodi</h4>
            <p class="card-description"> Add - Play Jodi </p>
            @if (TempData["msg"] != null)
            {
                <div class="bg-green">
                    <span style="color:green"> @TempData["msg"]</span>
                </div>
            }

        <form class="forms-sample" method="post">

            <div class="form-group">
                @Html.LabelFor(model => model.GameName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GameName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GameName, "", new { @class = "text-danger" })
                </div>
            </div>
             
            <div class="form-group">
                @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" ,@type="date" } })
                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GameNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.GameNumber, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model =>model.GameNumber, ViewBag.gamenumber as IEnumerable<SelectListItem> , "---Select Game Number---", new {@class="form-control"})
                    @Html.ValidationMessageFor(model => model.GameNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <button type="reset" class="btn btn-light">Cancel</button>
        </form>
        </div>
    </div>
</div>

